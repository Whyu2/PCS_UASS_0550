<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5pt"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="5pt">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@color/material_on_primary_disabled"
        android:orientation="vertical"
        android:padding="5pt">


        <TextView
            android:id="@+id/txtMatchh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#FFFFFF"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="35dp">

            <ImageView
                android:id="@+id/imgGambar"
                android:layout_width="336dp"
                android:layout_height="152dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.035"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txtHomescore"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:paddingRight="2dp"
                android:text="VS"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="VS"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgGambar"
                app:layout_constraintVertical_bias="0.466" />

            <TextView
                android:id="@+id/txtAwayscore"
                android:layout_width="65dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:paddingLeft="18dp"
                android:text="VS"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/txt" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Detail" />


    </LinearLayout>

</LinearLayout>